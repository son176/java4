<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">123456</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/my_video</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.default_schema">my_video</property>
		<mapping class="com.entity.Video" />
		<mapping class="com.entity.User" />
		<mapping class="com.entity.Favorite" />
		<mapping class="com.entity.Share" />
	</session-factory>
</hibernate-configuration>
